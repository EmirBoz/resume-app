{
  "name": "cv-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/cv-angular/stats.json",
    "build:server": "cd server && npm run build",
    "start:prod": "cd server && npm start",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "graphql:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run graphql:server\" \"npm start\"",
    "dev:graphql": "npm run graphql:server",
    "preview": "ng build --configuration production && npx http-server dist/cv-angular/browser -p 4200",
    "deploy:build": "npm run build:prod",
    "deploy:vercel": "vercel --prod",
    "deploy:production": "./scripts/deploy-production.sh",
    "security:check": "cd server && npx tsc --noEmit && cd .. && npm audit",
    "postinstall": "cd server && npm install"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@apollo/client": "^3.13.9",
    "@apollo/server": "^4.12.2",
    "@tailwindcss/typography": "^0.5.16",
    "@vercel/node": "^3.0.0",
    "apollo-angular": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-angular": "^0.539.0",
    "mongoose": "^8.9.4",
    "rxjs": "~7.8.0",
    "tailwind-merge": "^3.3.1",
    "tslib": "^2.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/jspdf": "^1.3.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.17.19",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "graphql-http": "^1.22.4",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "~5.8.2"
  }
}